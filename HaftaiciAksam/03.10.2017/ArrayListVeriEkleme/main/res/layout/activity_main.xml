<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.arraylistveriekleme.MainActivity">

    <EditText
        android:id="@+id/etEleman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEleman"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Eleman Ekle" />

    <Button
        android:id="@+id/btnListele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnEkle"
        android:layout_below="@+id/btnEkle"
        android:layout_marginTop="44dp"
        android:text="ElemanlarÄ± Listele" />

    <TextView
        android:id="@+id/tvEleman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnListele"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="TextView" />
</RelativeLayout>
