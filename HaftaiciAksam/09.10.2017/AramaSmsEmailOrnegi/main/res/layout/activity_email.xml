<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.aramasmsemailornegi.EmailActivity">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etKonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etEmail"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Konu"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etMesajDetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etKonu"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Mesajınız"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnMailGonder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etMesajDetay"
        android:layout_alignStart="@+id/etMesajDetay"
        android:layout_below="@+id/etMesajDetay"
        android:layout_marginTop="38dp"
        android:text="Mesaj GÖNDER" />
</RelativeLayout>
