<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.aramasmsemailornegi.SmsActivity">

    <EditText
        android:id="@+id/etSmsTelNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Telefon No"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etSmsMesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etSmsTelNo"
        android:layout_below="@+id/etSmsTelNo"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:hint="Mesaj"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnSmsGonder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etSmsMesaj"
        android:layout_alignStart="@+id/etSmsMesaj"
        android:layout_below="@+id/etSmsMesaj"
        android:layout_marginTop="83dp"
        android:text="Sms GÃ¶nder" />
</RelativeLayout>
