<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.serifgungor.notdefteriuygulamasi.NotEkleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:hint="Başlık"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etTarih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etBaslik"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Tarih"
                android:inputType="date" />

            <EditText
                android:id="@+id/etIcerik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/etTarih"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etTarih"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Notu giriniz"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btnNotEkle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etIcerik"
                android:layout_marginTop="30dp"
                android:text="Not Ekle" />

        </LinearLayout>


    </ScrollView>



</RelativeLayout>
