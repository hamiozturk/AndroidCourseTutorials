<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.ilkproje.MainActivity">

    <Button
        android:id="@+id/btnTikla"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Butona tÄ±kla"
        android:layout_below="@+id/etSonuc"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnTikla"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnTikla"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="Ad"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etSoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Soyad"
        android:inputType="textPersonName"
        android:layout_below="@+id/etAd"
        android:layout_alignStart="@+id/etAd"
        android:layout_alignEnd="@+id/etAd" />

    <EditText
        android:id="@+id/etSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/etSoyad"
        android:layout_alignStart="@+id/etSoyad"
        android:layout_alignEnd="@+id/etAd" />


</RelativeLayout>