<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.imageviewornegi.MainActivity">


    <ImageView
        android:id="@+id/ivResim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnKedi"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnKopek"
        android:layout_alignBottom="@+id/btnKopek"
        android:layout_alignParentStart="true"
        android:text="Kedi" />

    <Button
        android:id="@+id/btnKopek"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTimsah"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:text="Köpek" />

    <Button
        android:id="@+id/btnKus"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Kuş" />

    <Button
        android:id="@+id/btnTimsah"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnKopek"
        android:layout_alignTop="@+id/btnKus"
        android:text="Timsah" />
</RelativeLayout>
