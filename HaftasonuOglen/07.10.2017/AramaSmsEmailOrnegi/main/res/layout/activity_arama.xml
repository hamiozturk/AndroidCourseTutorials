<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.aramasmsemailornegi.AramaActivity">

    <Button
        android:id="@+id/btnArama1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTelNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="btnAramaYap"
        android:text="Arama Yap - 1" />

    <Button
        android:id="@+id/btnArama2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnArama1"
        android:layout_below="@+id/btnArama1"
        android:layout_marginTop="71dp"
        android:onClick="btnAramaYap2"
        android:text="Arama Yap - 2" />

    <EditText
        android:id="@+id/etTelNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Telefon No"
        android:inputType="phone" />
</RelativeLayout>
