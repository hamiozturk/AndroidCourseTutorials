<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.ornekson.EmailActivity">

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:ems="10"
        android:hint="Gönderilecek Email Adresi"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etKonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etEmail"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Konu"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etMesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etKonu"
        android:layout_below="@+id/etKonu"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="Mesajın içeriği"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnEmailGonder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMesaj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Email Gönder" />
</RelativeLayout>
