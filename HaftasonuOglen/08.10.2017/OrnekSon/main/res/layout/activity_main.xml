<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnArama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:onClick="intentGecis"
        android:text="Arama" />

    <Button
        android:id="@+id/btnSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnArama"
        android:layout_below="@+id/btnArama"
        android:layout_marginTop="41dp"
        android:onClick="intentGecis"
        android:text="SMS" />

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnSms"
        android:layout_below="@+id/btnSms"
        android:layout_marginTop="47dp"
        android:onClick="intentGecis"
        android:text="Email" />

    <Button
        android:id="@+id/btnRehber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnEmail"
        android:layout_marginBottom="57dp"
        android:onClick="intentGecis"
        android:text="Rehber" />
</RelativeLayout>