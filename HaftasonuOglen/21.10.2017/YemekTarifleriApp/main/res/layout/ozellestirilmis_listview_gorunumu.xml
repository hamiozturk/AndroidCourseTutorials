<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivYemekResim"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tvYemekIsim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="@color/yemekBaslikRengi"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayoutResim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvYemekIsim"
        android:layout_below="@+id/tvYemekIsim"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/linearLayoutResim"
        android:layout_below="@+id/linearLayoutResim"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHazirlamaSuresi"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="120"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPisirmeSuresi"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="120"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txtKisiSayisi"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="120"
            android:textSize="18sp"
            android:gravity="center"
            />

     </LinearLayout>

</RelativeLayout>